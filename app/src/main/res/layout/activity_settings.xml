<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:padding="50dp"
    >

        <EditText
            android:id="@+id/calendarname"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Calendar name"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/btdevicename"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Bluetooth device name"
            android:maxLines="1"
            />

    <CheckBox
        android:id="@+id/cb_eventnotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send notification when the driving ended"
    />
        <Button
            android:id="@+id/savebtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="SaveConfig"
            />
</LinearLayout>